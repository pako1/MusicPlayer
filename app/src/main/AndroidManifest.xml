<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayer">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CategoryActivity"
            android:label="Music Categories">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopActivity"
            android:label="Pop Album"
            android:parentActivityName=".CategoryActivity" />
        <activity
            android:name=".MusicPlayerActivity"
            android:label="Music Player"
            android:parentActivityName=".CategoryActivity" />
        <activity
            android:name=".RapActivity"
            android:label="Rap Album"
            android:parentActivityName=".CategoryActivity" />
        <activity
            android:name=".RockActivity"
            android:label="Rock Album"
            android:parentActivityName=".CategoryActivity" />
    </application>

</manifest>